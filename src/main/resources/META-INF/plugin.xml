<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.h3110w0r1dy.gitmojiplusintellijplugin</id>
    <name>IntelliJ Platform Plugin gitmoji-plus-intellij-plugin</name>
    <vendor>h3110w0r1d-y</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.h3110w0r1dy.gitmojiplusintellijplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.h3110w0r1dy.gitmojiplusintellijplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.h3110w0r1dy.gitmojiplusintellijplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
